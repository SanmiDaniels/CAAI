<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="attendance.controllers.FaceCameraFXMLController">
    <top>
            <VBox>
                    <HBox alignment="CENTER" spacing="10">
                            <padding>
                                    <Insets bottom="10" top="10" />
                            </padding>
                            <CheckBox fx:id="haarClassifier" onAction="#haarSelected" text="Haar Classifier" />
                            <CheckBox fx:id="lbpClassifier" onAction="#lbpSelected" text="LBP Classifier" />
                    </HBox>
                    <Separator />
         <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            </VBox>
    </top>
    <center>
            <VBox alignment="CENTER">
                    <padding>
                            <Insets left="10" right="10" />
                    </padding>
                    <ImageView fx:id="originalFrame" />
            </VBox>
    </center>
    <bottom>
            <HBox alignment="CENTER">
                    <padding>
                            <Insets bottom="25" left="25" right="25" top="25" />
                    </padding>
                    <Button fx:id="cameraButton" alignment="center" disable="true" onAction="#startCamera" text="Start camera" />
            </HBox>
    </bottom>
   
</BorderPane>
